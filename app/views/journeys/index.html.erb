<h1>Journeys</h1>

<ul class="sixteen columns journeys">
  <% @journeys.each do |journey| %>
    <li>
      <%= link_to journey do %>
        <div class="container column">
          <span class="time">
            <%= journey.created_at.strftime("%Y-%m-%d %H:%M") %>
          </span>
          -
          <span class="user"><%= journey.user.ip %></span>
        </div>

        <div class="container">
          <span class="first-event-url ten column clearfix">
            <%= journey.events.limit(1).first.try(:slug) %>
          </span>
          <span class="event-count two column clearfix">6 events</span>
        </div>

      <% end %>
    </li>
  <% end %>
</ul>
